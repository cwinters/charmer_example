<h1>Listing enrollments</h1>

<table>
  <tr>
    <th>ID</th>
    <th>User</th>
    <th>Name</th>
    <th>Classroom</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @enrollments.each do |enrollment| %>
  <tr>
    <td><%= enrollment.id %></td>
    <td><%= enrollment.user.name %></td>
    <td><%= enrollment.name %></td>
    <td><%= enrollment.classroom.name %></td>
    <td><%= link_to 'Show', enrollment_path(enrollment, classroom_id: enrollment.classroom_id) %></td>
    <td><%= link_to 'Edit', edit_enrollment_path(enrollment, classroom_id: enrollment.classroom_id) %></td>
    <td><%= link_to 'Destroy', enrollment_path(enrollment, classroom_id: enrollment.classroom_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

